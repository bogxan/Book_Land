@using Services.Abstractions.Dto.Order;
@model List<OrderDto>;

@{
    ViewData["Title"] = "Користувач - активні замовлення";
}
<style>
    body {
        background-color: #D3E4CD;
    }
    .product-list {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        flex-wrap: wrap;
    }
</style>
<a asp-action="Index" asp-controller="Home" class="btn btn-success">&larr; На головну</a>
<h3>Активні замовлення:</h3>
<div class="product-list">
    @foreach (var order in @Model)
    {
        @if (order.IsCompleted == false)
        {
            @await Html.PartialAsync("_OrderCard", order)
        }
    }
</div>
